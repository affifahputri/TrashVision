@{
    ViewData["Title"] = "Upload Gambar";
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --navy-dark: #0a192f;
            --navy-main: #112240;
            --gray-dark: #1f2933;
            --gray-light: #9ca3af;
            --white: #ffffff;
            --accent: #38bdf8;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, var(--navy-dark), var(--gray-dark));
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
        }

        .upload-container {
            background: var(--white);
            color: var(--gray-dark);
            width: 100%;
            max-width: 420px;
            padding: 32px;
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
        }

            .upload-container h2 {
                margin-top: 0;
                margin-bottom: 8px;
                color: var(--navy-main);
            }

            .upload-container p {
                margin-bottom: 24px;
                color: var(--gray-light);
                font-size: 14px;
            }

        .file-input {
            border: 2px dashed var(--gray-light);
            padding: 24px;
            text-align: center;
            border-radius: 12px;
            cursor: pointer;
            transition: 0.3s;
        }

            .file-input:hover {
                border-color: var(--accent);
                background: #f8fafc;
            }

            .file-input input {
                display: none;
            }

        .preview {
            margin-top: 20px;
            text-align: center;
        }

            .preview img {
                max-width: 100%;
                max-height: 220px;
                border-radius: 12px;
                display: none;
            }

        .btn-upload {
            margin-top: 24px;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 10px;
            background: var(--accent);
            color: var(--navy-dark);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-upload:hover {
                background: #0ea5e9;
            }

        /* tambahan style untuk video */
        .video-container { text-align:center; margin-top:12px; }
        video { width: 100%; max-width:360px; border-radius:8px; }
        canvas { display:none; }
        .controls { display:flex; gap:8px; margin-top:8px; }
    </style>
</head>
<body>
    <div class="upload-container">
        <h2>Upload Gambar</h2>
        <p>Pilih gambar atau gunakan kamera untuk mendeteksi jenis sampah</p>

        <form id="uploadForm" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
            @Html.AntiForgeryToken()
            <label class="file-input">
                Klik untuk memilih gambar
                <input type="file" id="fileInput" name="gambar" accept="image/png, image/jpeg" onchange="previewImage(event)">
            </label>

            <div class="preview">
                <img id="previewImg" style="display:none; max-width:100%; max-height:220px; border-radius:12px;" />
            </div>

            <button id="openCameraFromUpload" type="button" class="btn-upload" onclick="startCamera();">
                Scan dengan Kamera
            </button>
        </form>

        <hr />

        <div class="video-container">
            <button id="startCameraBtn" class="btn-upload" style="width:auto;">Gunakan Kamera</button>
            <div id="cameraArea" style="display:none;">
                <video id="video" autoplay playsinline></video>
                <div class="controls">
                    <button id="captureBtn" class="btn-upload" style="width:auto;">Ambil Foto</button>
                    <button id="stopCameraBtn" class="btn-upload" style="width:auto;background:#f87171;">Hentikan Kamera</button>
                </div>
                <canvas id="canvas"></canvas>
            </div>
        </div>

        <div id="resultArea" style="margin-top:16px;"></div>
    </div>

    <script>
        // Preview file input
        function previewImage(event) {
            const file = event.target.files[0];
            if (!file) return;
            const img = document.getElementById("previewImg");
            img.src = URL.createObjectURL(file);
            img.style.display = "block";
        }

        function startCamera() {
            const cameraArea = document.getElementById('cameraArea');
            cameraArea.style.display = 'block';
            navigator.mediaDevices.getUserMedia({ video: true })
                .then((stream) => {
                    const video = document.getElementById('video');
                    video.srcObject = stream;
                    video.play();
                })
                .catch((err) => {
                    alert('Error accessing camera: ' + err);
                });
        }

        // Kamera handling
        const startBtn = document.getElementById('startCameraBtn');
        const stopBtn = document.getElementById('stopCameraBtn');
        const captureBtn = document.getElementById('captureBtn');
        const cameraArea = document.getElementById('cameraArea');
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const resultArea = document.getElementById('resultArea');
        let stream = null;

        startBtn.addEventListener('click', async () => {
            try {
                stream = await navigator.mediaDevices.getUserMedia({ video: true });
                video.srcObject = stream;
                cameraArea.style.display = 'block';
            } catch (err) {
                alert('Tidak dapat mengakses kamera: ' + err.message);
            }
        });

        stopBtn.addEventListener('click', () => {
            if (stream) {
                stream.getTracks().forEach(t => t.stop());
                stream = null;
            }
            cameraArea.style.display = 'none';
        });

        captureBtn.addEventListener('click', async () => {
            // capture current frame
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            const ctx = canvas.getContext('2d');
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

            // convert to blob
            canvas.toBlob(async (blob) => {
                if (!blob) {
                    alert('Gagal mengambil foto');
                    return;
                }

                // ambil token antiforgery dari form
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';

                const fd = new FormData();
                fd.append('gambar', blob, 'capture.png');
                fd.append('__RequestVerificationToken', token);

                // kirim ke endpoint UploadAjax
                const resp = await fetch('/Home/UploadAjax', {
                    method: 'POST',
                    body: fd
                });

                if (!resp.ok) {
                    const text = await resp.text();
                    resultArea.innerHTML = `<div style="color:red">Upload error: ${resp.status} ${text}</div>`;
                    return;
                }

                const json = await resp.json();
                // tampilkan hasil
                resultArea.innerHTML = `
                    <div><strong>Hasil:</strong> ${json.label}</div>
                    ${json.score ? `<div><small>Score: ${json.score}</small></div>` : ''}
                    ${json.imageUrl ? `<div style="margin-top:8px;"><img src="${json.imageUrl}" style="max-width:200px;border-radius:8px;" /></div>` : ''}
                `;
            }, 'image/png');
        });
    </script>
</body>
</html>