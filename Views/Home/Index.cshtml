@model ProjekTrashVision.Models.UploadViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2 class="mb-4">🗑️ Projek TrashVision</h2>
            <p>Upload foto sampah untuk deteksi jenisnya</p>

            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
                <div class="mb-3">
                    <input type="file" name="fotoSampah" class="form-control" accept="image/*" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Deteksi Sekarang</button>
            </form>

            @if (Model.HasilPrediksi != null)
            {
                <div class="mt-4 p-4 border rounded @(Model.HasilPrediksi == "Organik" ? "bg-success text-white" : "bg-warning text-dark") shadow">
                    @if (Model.GambarBase64 != null)
                    {
                        <img src="data:image/png;base64,@Model.GambarBase64" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                    }
                    <h4>Hasil: @Model.HasilPrediksi</h4>
                    <p>Tingkat Keyakinan: @Model.SkorKepastian.ToString("0.00")%</p>

                    <hr />
                    <p>
                        <strong>Saran:</strong>
                        @if (Model.HasilPrediksi == "Organik")
                        {
                            <span>Buang ke komposter untuk pupuk tanaman.</span>
                        }
                        else
                        {
                            <span>Pisahkan dan kirim ke bank sampah terdekat.</span>
                        }
                    </p>
                </div>
            }
        </div>
    </div>
</div>